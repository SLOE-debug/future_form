{
  "include": [
    "src/*",
    "src/**/*.vue",
    "src/**/*.tsx",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "paths": {
      "@/*": [
        "*"
      ]
    }
  }
}